---
import Header from "../components/Header.astro";
import "@fontsource-variable/onest";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Portafolio de Luis Zamora G." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image" href="https://raw.githubusercontent.com/lezgec/porfolio-luiszamora.dev/30cc16bf893438f55d0b9e1c88472805fb85d5fc/public/images/lezgec.jpg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <Header/>
  <body>
    <div class="relative h-full w-full">
      <div class="absolute bottom-0 left-[-20%] right-0 top-[-10%] h-[500px] w-[500px] rounded-full bg-[radial-gradient(circle_farthest-side,rgba(255,0,182,.15),rgba(255,255,255,0))]" />
    </div>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;
  }

  html {
    scroll-behavior: smooth;
    font-family: "Onest Variable", system-ui, sans-serif;
  }
  body {
    display: flex;
    flex-direction: column;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>