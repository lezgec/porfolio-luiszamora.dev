---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Chat en Tiempo Real">
    <script type="module" src="/chat/chat.js"></script>
  <div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8 pt-24 pb-10 relative z-10">
    <div class="mb-6">
      <h1 class="text-3xl sm:text-4xl font-bold tracking-tight text-white">Chat en Tiempo Real</h1>
      <p id="status" class="mt-2 text-sm text-gray-300">Desconectado.</p>
    </div>

    <!-- Login -->
    <div id="loginBox" class="bg-white/5 border border-white/10 rounded-2xl p-4 sm:p-5 backdrop-blur">
      <div class="flex flex-col sm:flex-row gap-3">
        <input
          id="username"
          class="w-full sm:w-72 rounded-xl border border-white/10 bg-black/30 text-white placeholder:text-gray-400 px-4 py-3 outline-none focus:ring-2 focus:ring-white/20"
          placeholder="Tu usuario"
          autocomplete="username"
          inputmode="text"
        />
        <button
          id="connectBtn"
          class="rounded-xl bg-white text-black font-semibold px-5 py-3 hover:bg-gray-200 transition"
        >
          Conectar
        </button>
      </div>
      <p class="mt-3 text-xs text-gray-400">
        Tip: usa <b>/rooms</b>, <b>/roomwho</b>, <b>/room nombre</b>, <b>/exit</b>
      </p>
    </div>

    <!-- Chat -->
    <div id="chatBox" class="hidden mt-6">
      <div class="flex flex-wrap gap-2 mb-4">
        <button id="roomsBtn" class="px-3 py-2 rounded-xl bg-white/10 text-white border border-white/10 hover:bg-white/15 transition">/rooms</button>
        <button id="roomWhoBtn" class="px-3 py-2 rounded-xl bg-white/10 text-white border border-white/10 hover:bg-white/15 transition">/roomwho</button>
        <button id="joinRoomBtn" class="px-3 py-2 rounded-xl bg-white/10 text-white border border-white/10 hover:bg-white/15 transition">/room</button>

        <div class="ml-auto flex items-center gap-2 text-sm text-gray-300">
          <span class="opacity-70">Sala:</span>
          <span id="currentRoom" class="px-3 py-1 rounded-full bg-white/10 border border-white/10 text-white">general</span>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-4 gap-4">
        <!-- Mensajes -->
        <section class="lg:col-span-3 bg-white/5 border border-white/10 rounded-2xl backdrop-blur overflow-hidden">
          <div class="px-4 py-3 border-b border-white/10 flex items-center justify-between">
            <div class="text-sm text-gray-300">
              Mensajes
              <span class="opacity-60">• en tiempo real</span>
            </div>
            <button id="clearBtn" class="text-xs text-gray-300 hover:text-white transition">Limpiar</button>
          </div>

          <div id="messages" class="h-[55vh] sm:h-[60vh] overflow-y-auto px-4 py-4 space-y-3"></div>

          <div class="p-3 border-t border-white/10 bg-black/10">
            <div class="flex gap-2">
              <input
                id="msgInput"
                class="flex-1 rounded-xl border border-white/10 bg-black/30 text-white placeholder:text-gray-400 px-4 py-3 outline-none focus:ring-2 focus:ring-white/20"
                placeholder="Escribe un mensaje y Enter…"
                inputmode="text"
              />
              <button
                id="sendBtn"
                class="rounded-xl bg-emerald-500 text-black font-semibold px-5 py-3 hover:bg-emerald-400 transition"
              >
                Enviar
              </button>
            </div>
            <div class="mt-2 text-[11px] text-gray-400">
              Comandos: <b>/rooms</b>, <b>/roomwho</b>, <b>/room &lt;nombre&gt;</b>, <b>/exit</b>
            </div>
          </div>
        </section>

        <!-- Usuarios -->
        <aside class="lg:col-span-1 bg-white/5 border border-white/10 rounded-2xl backdrop-blur overflow-hidden">
          <div class="px-4 py-3 border-b border-white/10 text-sm text-gray-300">
            Usuarios en sala
          </div>
          <div class="p-4">
            <div id="roomUsers" class="text-sm text-gray-200 space-y-2"></div>
          </div>
        </aside>
      </div>
    </div>
  </div>
</Layout>