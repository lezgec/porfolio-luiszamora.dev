---
import AstroIcon from "../../public/icons/AstroIcon.astro";
import GithubIcon from "../../public/icons/GithubIcon.astro";
import HtmlIcon from "../../public/icons/HtmlIcon.astro";
import LinkIcon from "../../public/icons/LinkIcon.astro";
import VueIcon from "../../public/icons/VueIcon.astro";
import TailwindIcon from "../../public/icons/TailwindIcon.astro";
import DotNetIcon from "../../public/icons/DotNetIcon.astro";
import SqLiteIcon from "../../public/icons/SqLiteIcon.astro";
import CSharp from "../../public/icons/CSharpIcon.astro";

const TAGS = {
  VUE: {
    name: "Vue.js",
    class: "bg-green-700 text-white",
    icon: VueIcon,
  },
  HTML: {
    name: "HTML",
    class: "bg-orange-400 text-white",
    icon: HtmlIcon,
  },
  ASTRO: {
    name: "Astro",
    class: "bg-blue-500 text-white",
    icon: AstroIcon,
  },
  TAILWIND: {
    name: "Tailwind",
    class: "bg-blue-700 text-white",
    icon: TailwindIcon,
  },
  DOTNET: {
    name: ".NET",
    class: "bg-blue-700 text-white",
    icon: DotNetIcon,
  },
  SQLITE: {
    name: "SQLITE",
    class: "bg-blue-700 text-white",
    icon: SqLiteIcon,
  },
  CSHARP: {
    name: "CSHARP",
    class: "bg-blue-700 text-white",
    icon: CSharp,
  },
};

const PROJECTS = [
  {
    title: "Luiszamora.dev - Porfolio Personal",
    description:
      "Portafolio personal de Luis Zamora, el cual estas viendo en este momento, desarrollado con Astro y Tailwind.",
    link: "Https://luiszamora.dev/",
    github: "https://github.com/lezgec/porfolio-luiszamora.dev",
    image: 'https://raw.githubusercontent.com/lezgec/porfolio-luiszamora.dev/main/public/images/project1.jpg',
    tags: [TAGS.TAILWIND, TAGS.ASTRO],
  },
  {title: "Registro de Calificaciones V1.0",
    description:
      "Aplicacion de Escritorio para Registro de calificaciones sencillo.",
    link: "#proyectos",
    github: "https://github.com/lezgec/RegistroCalificaciones.git",
    image: 'https://raw.githubusercontent.com/lezgec/porfolio-luiszamora.dev/refs/heads/dev/public/images/project2.png',
    tags: [TAGS.DOTNET, TAGS.SQLITE, TAGS.CSHARP],}
];
---

{
  PROJECTS.map(({ title, description, image, tags, link, github }) => (
    <article class="flex sm:flex-row flex-col gap-x-4 mb-5">
      <img
        class="sm:max-w-96 rounded-2xl shadow-2xl shadow-white/10 "
        src={image}
        alt={`Captura de pantalla del Proyeto`}
      />
      <span>
        <h3 class="text-3xl font-semibold dark:text-white mt-3 ">{title}</h3>
        <ul class="flex flex-row my-3">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 mr-2 items-center rounded-full text-sm px-4 py-2 ${tag.class}`}
              >
                <tag.icon class="size-4 lg:size-6" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
        <p class="text-lg dark:text-gray-200 text-pretty">{description}</p>
        <span class="flex flex-row gap-x-4 mt-4">
          <a
            href= {link}
            target="_blank"
          rel="noopener"
            class="flex flex-row items-center text-white border border-gray-700 bg-gray-900 hover:bg-gray-700 rounded-lg text-xl px-3 py-2 text-center"
          >
            <LinkIcon class="size-4 lg:size-6 mr-2" />
            Preview
          </a>
          <a
            href={github}
            target="_blank"
            rel="noopener"
            class="flex flex-row items-center text-white border border-gray-700 bg-gray-900 hover:bg-gray-700 rounded-lg text-xl px-3 py-2 text-center"
          >
            <GithubIcon class="size-4 lg:size-6 mr-2" />
            Code
          </a>
        </span>
      </span>
    </article>
  ))
}
